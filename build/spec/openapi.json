{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "API Landscape Discovery Hub",
    "description": "**WIP the design is to be properly designed**\nWeb API Environment entrypoint for a list of links for decentralized API Landcsape discovery\n",
    "x-lifecycle": {
      "name": "api-landscape"
    }
  },
  "schemes": [
    "http"
  ],
  "basePath": "/",
  "paths": {
    "/apis": {
      "get": {
        "consumes": [
          "application/json; charset=utf-8"
        ],
        "produces": [
          "application/json; charset=utf-8"
        ],
        "summary": "Gets APIs",
        "description": "Returns a list of APIs.",
        "responses": {
          "200": {
            "headers": {
              "content-type": {
                "type": "string",
                "default": "application/json; charset=utf-8"
              }
            },
            "description": "A list of APIs",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "api_url"
                ],
                "properties": {
                  "api_url": {
                    "type": "string",
                    "example": "http://hub.apilandscape.org/"
                  }
                }
              }
            },
            "examples": {
              "application/json": [
                {
                  "api_url": "http://localhost:3000/"
                }
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Apis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "api_url"
        ],
        "properties": {
          "api_url": {
            "type": "string",
            "example": "http://hub.apilandscape.org/"
          }
        }
      }
    }
  }
}
